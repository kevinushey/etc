#!/usr/bin/env sh

# use a plain old cp if R_CMD is not set
if [ -z "${R_CMD}" ]; then
	/bin/cp "$@"
	exit
fi

# trim off flags intended for cp
while [ "$#" -ne "0" ]; do

	case "$1" in

	--help)
		/bin/cp --help
		exit
	;;

	--version)
		/bin/cp --version
		exit
	;;

	--)
		shift
		break
	;;

	-*)
		shift
	;;

	*)
		break
	;;

	esac
done

# figure out flags to pass to rsync
if [ -n "${VERBOSE}" ] && [ "${VERBOSE}" != "0" ]; then
	FLAGS="-avr"
else
	FLAGS="-aqr"
fi

# write out an exclude file
SOURCE="$1"
EXCLUDEFILE=$(mktemp)
cat > "${EXCLUDEFILE}" <<- EOF
${SOURCE}/.Rproj.user
${SOURCE}/.git
${SOURCE}/revdep
${SOURCE}/packrat
${SOURCE}/renv
${SOURCE}/tags
EOF

# perform the copy
rsync "${FLAGS}" --exclude-from="${EXCLUDEFILE}" "$@"
STATUS="$?"

# clean up exclude file
rm "${EXCLUDEFILE}"
exit "${STATUS}"

